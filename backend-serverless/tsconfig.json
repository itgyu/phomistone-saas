{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@types/*": ["types/*"],
      "@functions/*": ["functions/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*", "serverless.ts"],
  "exclude": ["node_modules", "dist", ".serverless"]
}
